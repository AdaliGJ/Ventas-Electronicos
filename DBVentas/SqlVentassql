create or replace procedure marcanueva 
(
  marcap in varchar2 
, ipp in varchar2 
) as 
begin
 declare idv int;
     begin
         select id_marca into idv FROM marcas ORDER BY id_marca desc FETCH NEXT 1 ROWS ONLY;
         insert into marcas values(idv+1, marcap, ipp);
         
         commit;
     end;
  
end marcanueva;




  CREATE TABLE "SYSTEM"."PEDIDOS" 
   (	"IDPEDIDO" NUMBER(*,0) NOT NULL ENABLE, 
	"FECHA" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
	"IDINVENTARIO" NUMBER(*,0) NOT NULL ENABLE, 
	"CANTIDAD" NUMBER(*,0) NOT NULL ENABLE, 
	"ESTADO" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
	"FECHAENTREGA" VARCHAR2(20 BYTE), 
	 CONSTRAINT "PEDIDOS_PK" PRIMARY KEY ("IDPEDIDO")
  USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1
  BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "SYSTEM"  ENABLE, 
	 CONSTRAINT "PEDIDOS_FK1" FOREIGN KEY ("IDINVENTARIO")
	  REFERENCES "SYSTEM"."INVENTARIO" ("ID_INVENTARIO") ENABLE
   ) PCTFREE 10 PCTUSED 40 INITRANS 1 MAXTRANS 255 
 NOCOMPRESS LOGGING
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1
  BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "SYSTEM" ;

create or replace procedure actualizarestado 
(
  id_p in int 
, estado_p in varchar2 
, fecha_p in varchar2 
) as 
begin
   update pedidos set estado = estado_p, fechaentrega=fecha_p where idpedido = id_p; 

   commit;
end actualizarestado;

